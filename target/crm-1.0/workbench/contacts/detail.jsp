<%@page contentType="text/html;charset=UTF-8" language="java" %>
<%
String basePath = request.getScheme()+"://"+request.getServerName()+":"+request.getServerPort()+request.getContextPath()+"/";
%>
<!DOCTYPE html>
<html>
<head>
	<base href="<%=basePath%>">
<meta charset="UTF-8">

<link href="jquery/bootstrap_3.3.0/css/bootstrap.min.css" type="text/css" rel="stylesheet" />
<script type="text/javascript" src="jquery/jquery-1.11.1-min.js"></script>
<script type="text/javascript" src="jquery/bootstrap_3.3.0/js/bootstrap.min.js"></script>

<script type="text/javascript">

	//默认情况下取消和保存按钮是隐藏的
	var cancelAndSaveBtnDefault = true;
	
	$(function(){
		$("#remark").focus(function(){
			if(cancelAndSaveBtnDefault){
				//设置remarkDiv的高度为130px
				$("#remarkDiv").css("height","130px");
				//显示
				$("#cancelAndSaveBtn").show("2000");
				cancelAndSaveBtnDefault = false;
			}
		});
		
		$("#cancelBtn").click(function(){
			//显示
			$("#cancelAndSaveBtn").hide();
			//设置remarkDiv的高度为130px
			$("#remarkDiv").css("height","90px");
			cancelAndSaveBtnDefault = true;
		});
		
		$(".remarkDiv").mouseover(function(){
			$(this).children("div").children("div").show();
		});
		
		$(".remarkDiv").mouseout(function(){
			$(this).children("div").children("div").hide();
		});
		
		$(".myHref").mouseover(function(){
			$(this).children("span").css("color","red");
		});
		
		$(".myHref").mouseout(function(){
			$(this).children("span").css("color","#E6E6E6");
		});

		$("#remarkBody1").on("mouseover",".remarkDiv",function(){
			$(this).children("div").children("div").show();
		})
		$("#remarkBody1").on("mouseout",".remarkDiv",function(){
			$(this).children("div").children("div").hide();
		})

		showContactsRemarks();
		showTranByContactId();
		showActivityByContactId();
		//添加备注
		$("#addBtn").click(function () {
			var noteContent = $("#remark").val();
			$.ajax({
				url:"workbench/contacts/addRemark.do",
				data:{
					"id":"${contact.id}",
					"noteContent":noteContent
				},
				dataType:"JSON",
				type:"POST",
				success:function (data) {
					if(data){
						$("#remark").val('')
						showContactsRemarks();
					}else {
						alert("添加备注失败！")
					}
				}
			})

		})
		//更新备注
		$("#updateRemarkBtn").click(function (){
			$.ajax({
				url:"workbench/contacts/updateRemark.do",
				data:{
					"id":$("#remarkId").val(),
					"noteContent":$("#noteContent").val()
				},
				dataType:"JSON",
				Type:"POST",
				success:function (data) {
					if(data){
						showContactsRemarks();
						$("#editRemarkModal").modal("hide")
					}else {
						alert("更新备注信息失败！")
					}
				}
			})
		})
		//查询市场活动/模糊查询
		//查询尚未关联该联系人的市场活动
		$("#aname").keydown(function (event) {
			if (event.keyCode==13){
				var aname = $("#aname").val()
				$("#aid").val("${contact.id}")
				$.ajax({
					url:"workbench/contacts/getActivityListByAname.do",
					data:{
						"aname":$.trim($("#aname").val()),
						"contactsId":"${contact.id}"
					},
					dataType:"json",
					type:"get",
					success:function (data) {
						/*
						data
							{"dataList":[{市场活动1},{},{}]}
						 */
						var html = "";
						$.each(data,function (i,n) {
							html += '<tr>';
							html += '<td><input type="checkbox" name="xz" value="'+n.id+'"/></td>';
							html += '<td>'+n.name+'</td>';
							html += '<td>'+n.startDate+'</td>';
							html += '<td>'+n.endDate+'</td>';
							html += '<td>'+n.owner+'</td>';
							html += '</tr>';
						})
						$("#searchAlist").html(html)
					}
				})
				return false;
			}
		})
		//模态窗口--->>>关联市场活动
		$("#submitBtn").click(function () {
			var contactId = "${contact.id}";
			var $xz = $("input[name=xz]:checked");
			if($xz.length==0){
				alert("请选择需要关联的市场活动！")
			}else {
				var param = "cid="+contactId+"&";
				for (let i = 0; i < $xz.length; i++) {
					var aid = $xz[i].value;
					param += "aid="+aid;
					if(i<$xz.length-1){
						param += "&"
					}
				}
				$.ajax({
					url:"workbench/contacts/bund.do",
					data:param,
					dataType:"json",
					type:"post",
					success:function (data) {
						if(data){
							//绑定成功，刷新市场活动列表
							showActivityByContactId();
							//清空搜索框和复选框

							//关闭模态窗口
							$("#bundModal").modal("hide")
						}else {
							alert("关联市场活动失败！")
						}
					}
				})
				$("#bundActivityModal").modal('hide');
			}
		})

	});

	//展示备注信息列表
	function showContactsRemarks() {
		$.ajax({
			url:"workbench/contacts/showContactsRemarksById.do",
			data:{
				"id":"${contact.id}"
			},
			dataType:"JSON",
			type:"GET",
			success:function (data) {
				var html= "";
				$.each(data,function (i,n){
					html += '<div class="remarkDiv" style="height: 60px;" id="d'+n.id+'">';
					html += '<img title="${contact.owner}" src="image/user-thumbnail.png" style="width: 30px; height:30px;">';
					html += '<div style="position: relative; top: -40px; left: 40px;" >';
					html += '<h5 id="e'+n.id+'">'+n.noteContent+'</h5>';
					html += '<font color="gray">联系人</font> <font color="gray">-</font><b>${contact.fullname}${contact.appellation}-${contact.customerId}</b><small style="color: gray;">&nbsp;&nbsp;'+(n.editFlag==0?n.createTime:n.editTime)+'&nbsp;由&nbsp;'+(n.editFlag==0?n.createBy:n.editBy)+'</small>';
					html += '<div style="position: relative; left: 500px; top: -30px; height: 30px; width: 100px; display: none;">';
					html += '<a class="myHref" href="javascript:void(0);" onclick=editRemark("'+n.id+'")><span class="glyphicon glyphicon-edit" style="font-size:20px; color: #FF0000;"></span></a>';
					html += '&nbsp;&nbsp;&nbsp;&nbsp;';
					html += '<a class="myHref" href="javascript:void(0);" onclick=deleteRemark("'+n.id+'")><span class="glyphicon glyphicon-remove" style="font-size: 20px; color: #FF0000;"></span></a>';
					html += '</div>';
					html += '</div>';
					html += '</div>';
				})
				$("#remarkbody").html(html)
			}
		})
	}
	//修改备注
	function editRemark(id) {
		var noteContent = $("#e"+id).html()
		$("#noteContent").val(noteContent)

		$("#remarkId").val(id);

		$("#editRemarkModal").modal('show')
		//光标
		$("#editRemarkModal").on("shown.bs.modal",function (){
			$("#editRemarkModal #noteContent").focus();
		})
	}
	//删除备注
	function deleteRemark(id) {
		if (confirm("确定要删除该条备注")){
			$.ajax({
				url:"workbench/contacts/deleteRemark.do",
				data:{
					"id":id
				},
				dataType:"JSON",
				Type: "POST",
				success:function (data) {
					if(data){
						//showContactsRemarks();
						$("#d"+id).remove()
					}else {
						alert("删除备注失败！")
					}
				}
			})
		}
	}
	//展示联系人相关交易活动列表
	function showTranByContactId(){
		$.ajax({
			url:"workbench/contacts/showTranByContactId.do",
			data:{
				"contactsId":"${contact.id}"
			},
			dataType:"JSON",
			type:"GET",
			success:function (data) {
				var html = "";
				$.each(data,function (i,n) {
					html += '<tr>';
					html += '<td><a href="transaction/detail.html" style="text-decoration: none;">'+n.customerId+'-'+n.name+'</a></td>';
					html += '<td>'+n.money+'</td>';
					html += '<td>'+n.stage+'</td>';
					html += '<td>'+n.possibility+'</td>';
					html += '<td>'+n.expectedDate+'</td>';
					html += '<td>'+n.type+'</td>';
					html += '<td><a href="javascript:void(0);" onclick=deleteTran("'+n.id+'") style="text-decoration: none;"><span class="glyphicon glyphicon-remove"></span>删除</a></td>';
					html += '</tr>';
				})
				$("#tranTBody").html(html)
			}
		})
	}
	//展示联系人相关市场活动列表
	function showActivityByContactId(){
		$.ajax({
			url:"workbench/contacts/showActivityByContactId.do",
			data:{
				"contactsId":"${contact.id}"
			},
			dataType:"JSON",
			type:"GET",
			success:function (data) {
				var html = "";
				$.each(data,function (i,n) {
					html += '<tr>';
					html += '<td><a href="activity/detail.jsp" style="text-decoration:none;" >'+n.name+'</a></td>';
					html += '<td>'+n.startDate+'</td>';
					html += '<td>'+n.endDate+'</td>';
					html += '<td>'+n.owner+'</td>';
					html += '<td><a href="javascript:void(0);" onclick=unbund("'+n.id+'") style="text-decoration: none;"><span class="glyphicon glyphicon-remove"></span>解除关联</a></td>';
					html += '</tr>';
				})
				$("#aTbody").html(html)
			}
		})
	}
	//解除绑定
	function unbund(id) {
		$("#unbundActivityModal").modal('show')
		$("#unbundBtn").click(function (){
			$.ajax({
				url:"workbench/contacts/unbund.do",
				data:{
					"aid":id,
					"cid":"${contact.id}"
				},
				dataType:"JSON",
				type:"POST",
				success:function (data) {
					if (data){
						showActivityByContactId();
						$("#unbundActivityModal").modal('hide');
					}else {
						alert("解除联系人和市场活动关联失败！")
					}
				}
			})
		})

	}
	//删除交易
	function deleteTran(id) {
		alert(id)
		if (confirm("确定要删除该条记录吗？")){
			$.ajax({
				url:"workbench/contacts/deleteTran.do",
				data:{
					"tid":id,
				},
				dataType:"JSON",
				type:"POST",
				success:function (data) {
					if (data){
						showTranByContactId();
						$("#unbundActivityModal").modal('hide');
					}else {
						alert("解除联系人和市场活动关联失败！")
					}
				}
			})
		}
	}

</script>

</head>
<body>
	<!-- 修改市场活动备注的模态窗口 -->
	<div class="modal fade" id="editRemarkModal" role="dialog">
